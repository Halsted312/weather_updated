# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://kalshi:kalshi@localhost:5434/kalshi_weather
DB_HOST=localhost
DB_PORT=5434
DB_NAME=kalshi_weather
DB_USER=kalshi
DB_PASSWORD=kalshi

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Kalshi API - Get from https://kalshi.com/
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_PRIVATE_KEY_PATH=./weather.pem

# Visual Crossing Weather API - Get from https://www.visualcrossing.com/
VC_API_KEY=your_visual_crossing_api_key_here

# =============================================================================
# API KEYS (Optional)
# =============================================================================

# NOAA API (optional) - Get from https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_KEY=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
LOG_LEVEL=INFO
DATA_DIR=./data
MAX_WORKERS=4
